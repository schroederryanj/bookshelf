# Database (MySQL/MariaDB)
DATABASE_URL="mysql://username:password@localhost:3306/bookshelf"
DB_HOST="localhost"
DB_USER="username"
DB_PASSWORD="password"
DB_NAME="bookshelf"
DB_PORT="3306"

# Admin Authentication
ADMIN_PASSWORD="your-secure-password-here"
SESSION_SECRET="generate-a-random-32-character-string"

# Google Books API (optional - increases rate limits from ~100/day to unlimited)
# Get your key at: https://console.cloud.google.com/apis/credentials
GOOGLE_BOOKS_API_KEY=

# Twilio SMS Configuration (Optional - enables SMS reading assistant)
# Get your credentials at: https://console.twilio.com
# See docs/sms-assistant.md for setup instructions
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567
